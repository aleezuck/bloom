<%= link_to shop.url, target: "_blank" do %>
  <div id="shop-<%= shop.id %>" class="shop-popup">
    <p><%= image_tag(shop.picture, width: 130, height: 110, crop: :fill) %></p>
    <h2><%= shop.name %></h2>
    <div id="shop-review">
      <% shop.review.round.times do %>
        <i class="fas fa-star"></i>
      <% end %>
      <% shop.blank_stars.times do %>
        <i class="far fa-star"></i>
      <% end %>
    </div>
  </div>
<% end %>
