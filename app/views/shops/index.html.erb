<div class="row">
  <div class="col-12">
    <h1 class="text-center shop-page-header">Shops near you</h1>
    <%= link_to "Return to plant", :back, class: "btn btn-primary" %>
  </div>
</div>
<div class="row shop-content">
  <div class="col-sm-12 col-md-12 col-lg-6 order-sm-2 order-lg-1">
    <div id="shop-cards">
      <% @shops.each do |shop| %>
        <div class="shop-card" data-lat="<%= shop.latitude %>" data-long="<%= shop.longitude %>">
          <div class="shop-img" style="background-image: url('<%= image_path(shop.picture
            ) %>')">
          </div>
          <div class="shop-card-text">
            <h2><%= shop.name %></h2>
            <p><i class="fas fa-phone-alt"></i><%= shop.phone_number %></p>
            <div class="shop-card-address">
              <p><i class="fas fa-map-marker-alt"></i></p>
              <p><%= shop.address %></p>
            </div>
            <p class="text-center"><%= link_to "visit website", shop.url, target: "_blank", class: "btn btn-primary btn-small" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-12 col-md-12 col-lg-6 order-sm-1 order-lg-2">
    <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
