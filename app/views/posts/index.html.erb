<div class="container-main">
  <div class="title">
    <h1><%= @plant.name %></h1>
  </div>

  <div class="plant-post-grid">
    <div>
      <%= image_tag(@plant.plant_photos.first.url, width: 400, height: 450) %>
      <%= simple_form_for([@plant, @post], html: { class: 'post-form' } ) do |f| %>
        <%= f.input :content, label: false, placeholder: 'Post a comment' %>
        <%= f.submit class: 'btn btn-primary btn-small' %>
      <% end %>
      <div>
        <%= link_to "Back to plant", plant_path(@plant), class: 'btn btn-primary' %>
      </div>
    </div>

    <div>
      <% @posts.each do |post| %>
        <%= render 'posts/post', post: post %>

        <div class="post-replies">
          <div class="collapse" id="replyForm<%= post.id %>">
            <%= simple_form_for([post, @post_reply], html: { class: 'post-form' } ) do |f| %>
              <%= f.input :content, label: false, placeholder: 'Post a comment' %>
              <%= f.submit class: 'btn btn-primary btn-small' %>
            <% end %>
          </div>
          <% post.post_replies.order(upvotes: :desc).each do |reply| %>
            <%= render 'posts/reply', reply: reply %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
