<div class="container-main">
  <div class="title">
    <h1><%= @plant.name %></h1>
  </div>

  <div class="plant-post-grid">
    <div>
      <%= image_tag(@plant.plant_photos.first.url, width: 400, height: 450) %>
      <%= simple_form_for([@plant, @post], html: { class: 'post-form' } ) do |f| %>
        <%= f.input :content, label: false, placeholder: 'Post a comment' %>
        <%= f.submit class: 'btn btn-primary btn-small' %>
      <% end %>
      <div>
        <%= link_to "Back to plant", plant_path(@plant), class: 'btn btn-primary' %>
      </div>
    </div>

    <div>
      <% @posts.each do |post| %>
        <div class="plant-post">
          <% if post.user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar" %>
          <% else %>
            <%= image_tag "avatar-placeholder.png", class: "avatar" %>
          <% end %>
          <div class="post-body">
            <p class="post-title"><small><strong><%= post.user.email %></strong></small></p>
            <p class="post-content"><%= post.content %></p>
            <p class="post-bottom">
              <span class="upvote-post">
                <%= link_to upvote_post_path(post), method: :patch do %>
                  <i class="fas fa-thumbs-up"></i>
                <% end %>
                <span class="upvote-number"><%= post.upvotes %></span>
              </span>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
