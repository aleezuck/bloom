<div id="home-container-top">
  <h1>BLOOM</h1>
  <h2>Find the perfect plant for your home</h2>
  <%= link_to "Find my plant", root_path(anchor: "home-form"), class: "btn btn-primary" %>
  <%= link_to "See all plants", plants_path, class: "btn btn-outline-primary" %>
</div>

<%= image_tag "home-page-plant1.png", alt: "Plant", id: "home-plant-1", width: 600 %>

<div id="home-form">
  <h2 class="text-center">Find my plant</h2>

  <%= image_tag "home-page-plant2.png", alt: "Plant", id: "home-plant-2", width: 560 %>

  <div class="row d-flex justify-content-end mt-5">
    <div class="col-6">
      <%= form_tag plants_path, id: "home-form-container", method: :get do %>
        <div class="form-group">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a specific plant"
          %>
        </div>

        <div class="form-group">
          <%= hidden_field_tag :max_price,
            params[:max_price],
            class: "form-control",
            placeholder: "Max $ you are willing to spend",
            id: "slider-form-value"
          %>
        </div>
        <div id="slider">
          <label for="price-slider" class="form-label"><strong>Max $ you are willing to spend</strong></label>
          <input type="range" class="form-range" min="5" max="150" step="5" id="price-slider">
          <div id="slider-value"></div>
        </div>

        <fieldset class="form-group">
          <legend class="col-form-label">
            <strong>Do you have children or pets?</strong>
            <i class="far fa-question-circle" data-toggle="tooltip" data-placement="right"
               title="Some plants are toxic and can be dangerous for young children or pets."></i>
          </legend>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:pets, "true", false, class: "form-check-input") %>
            <%= label_tag(:pets_true, "Yes", class: "form-check-label") %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:pets, "false", false, class: "form-check-input") %>
            <%= label_tag(:pets_false, "No", class: "form-check-label") %>
          </div>
        </fieldset>


        <fieldset class="form-group">
          <legend class="col-form-label"><strong>Level of light</strong></legend>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:light_level, "low", false, class: "form-check-input") %>
            <%= label_tag(:light_level_low, "Low", class: "form-check-label") %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:light_level, "medium", false, class: "form-check-input") %>
            <%= label_tag(:light_level_medium, "Medium", class: "form-check-label") %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:light_level, "high", false, class: "form-check-input") %>
            <%= label_tag(:light_level_high, "High", class: "form-check-label") %>
          </div>
        </fieldset>

        <fieldset class="form-group">
          <legend class="col-form-label"><strong>How much effort are you willing to put in your plant's care?</strong></legend>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:care_level, "low", false, class: "form-check-input") %>
            <%= label_tag(:care_level_low, "Low", class: "form-check-label") %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:care_level, "medium", false, class: "form-check-input") %>
            <%= label_tag(:care_level_medium, "Medium", class: "form-check-label") %>
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:care_level, "high", false, class: "form-check-input") %>
            <%= label_tag(:care_level_high, "High", class: "form-check-label") %>
          </div>
        </fieldset>

        <div id="home-form-submit">
         <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
