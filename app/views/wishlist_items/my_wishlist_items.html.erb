<div class="container_card">
  <% @my_wishlist_items.each do |item| %>
  <div class="individual">
    <div class="card mb-5 bg-transparent card">
    <div class="image">
      <img src="https://media.glamour.com/photos/5ea89429e67f360008b064d8/master/w_1172,h_1412,c_limit/Pink%20Anthurium.png" alt="Plant" width="300" height="300">
    </div>
      <div class="row">
          <div class="card-body">
            <h2 class="card-title"><%= link_to item.plant.name, plant_path(item.plant) %></h2>
            <p class="card-text">Toxic: <%= item.plant.toxic %>  Light level: <%= item.plant.light_level %></p>
            <p class="card-text">Price: <%= item.plant.price %> Care level: <%= item.plant.care_level %></p>
          </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
