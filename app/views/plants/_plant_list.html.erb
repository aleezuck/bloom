<div data-plant-list-target="list">
  <h1><%= pluralize @plants.count, 'plant' %> found</h1>

  <div class="row">

    <% plants.each do |plant| %>
      <div class="col-12 col-md-4">
        <%= link_to plant_path(plant) do %>
          
          <%= render 'plant_card.html', plant: plant %>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
