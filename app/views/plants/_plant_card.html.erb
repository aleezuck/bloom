<div class="container_card">
  <div class="row">
      <div class="col-4 pb-4">
        <div class="cont card">
          <div class="image">
            <img src="https://media.glamour.com/photos/5ea89429e67f360008b064d8/master/w_1172,h_1412,c_limit/Pink%20Anthurium.png" alt="Plant" class="plant_img">
          </div>
          <div class="text row">
            <div class="card-body">
              <h2 class="card-title"><%= link_to plant.name, plant_path(plant) %></h2>
              <p class="card-text"><strong>Toxic:</strong> <%= plant.toxic %>   <strong>Light level:</strong> <%= plant.light_level %></p>
              <p class="card-text"><strong>Price:</strong> <%= plant.price %>  <strong>Care level:</strong> <%= plant.care_level %></p>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
